{
  "name": "borine",
  "private": true,
  "version": "0.0.0",
  "description": "BORINE monorepo (Expo + React Native)",
  "scripts": {
    "medication:start": "npm run start --workspace apps/medication",
    "medication:android": "npm run android --workspace apps/medication",
    "medication:ios": "npm run ios --workspace apps/medication",
    "medication:web": "npm run web --workspace apps/medication",
    "lint": "eslint \"apps/**/*.{ts,tsx}\" \"packages/**/*.{ts,tsx}\"",
    "format": "prettier --write \"**/*.{js,ts,tsx,json,md}\"",
    "test": "echo \"(테스트 스텁)\" && exit 0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=18"
  },
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-native": "^5.0.0",
    "prettier": "^3.7.4"
  }
}
